<controls:CustomDialog x:Class="EduOrgAMS.Client.Dialogs.MultilineTextDialog"
                       d:DataContext="{d:DesignInstance local:MultilineTextDialog}"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:local="clr-namespace:EduOrgAMS.Client.Dialogs"
                       xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                       mc:Ignorable="d"
                       d:DesignHeight="450" d:DesignWidth="800"
                       MinHeight="200" MinWidth="300"
                       Title="{Binding Path=DialogTitle}"
                       Style="{StaticResource DefaultDialog}"
                       KeyUp="Dialog_KeyUp">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding Path=DialogMessage}"
                   Style="{DynamicResource Paragraph}"
                   TextWrapping="Wrap" Margin="10"
                   Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"/>
        <TextBox Grid.Row="1" MinWidth="250" MinHeight="100"
                 Text="{Binding Path=InputValue, Mode=TwoWay}"
                 TextWrapping="Wrap" AcceptsReturn="True"
                 Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                 Margin="10"
                 HorizontalScrollBarVisibility="Disabled"
                 VerticalScrollBarVisibility="Auto"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button x:Name="btnOk"
                    Content="{DynamicResource OkTitle}"
                    Style="{DynamicResource MahApps.Styles.Button.Dialogs.Accent.TextWrapping}"
                    Margin="0 0 10 0"
                    Click="Ok_Click"/>
            <Button x:Name="btnCancel"
                    Content="{DynamicResource CancelTitle}"
                    Style="{DynamicResource MahApps.Styles.Button.Dialogs.TextWrapping}"
                    Visibility="{Binding Path=IsCancellable, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Margin="0 0 10 0"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</controls:CustomDialog>
