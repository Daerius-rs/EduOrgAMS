<local:PageContent x:Class="EduOrgAMS.Client.Pages.PlaceholderPage"
                   d:DataContext="{d:DesignInstance viewModel:PlaceholderViewModel}"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                   xmlns:local="clr-namespace:EduOrgAMS.Client.Pages"
                   xmlns:viewModel="clr-namespace:EduOrgAMS.Client.Pages.ViewModel"
                   mc:Ignorable="d" 
                   d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel>
            <TextBlock Name="txtSmile" FontWeight="Bold" FontSize="34"
                       Style="{DynamicResource Header1}" HorizontalAlignment="Center" Margin="5"/>
            <TextBlock Text="{DynamicResource ResourceKey=WIPTitle}"
                       Style="{DynamicResource Header2}" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</local:PageContent>
